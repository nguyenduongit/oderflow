{
  "expo": {
    "name": "OrderFlow",
    "slug": "OrderFlow",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "scheme": "orderflow",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "webpack",
      "output": "static", 
      "favicon": "./src/assets/images/icon.png",
      "build": {
        "babel": {
          "presets": ["babel-preset-expo"]
        }
      },
      "meta": {
        "title": "OrderFlow",
        "description": "A modern order management application",
        "image": "./src/assets/images/icon.png",
        "themeColor": "#ffffff"
      },
      "pwa": {
        "manifest": {
          "short_name": "OrderFlow",
          "name": "OrderFlow",
          "start_url": "/",
          "display": "standalone",
          "theme_color": "#ffffff",
          "background_color": "#ffffff",
          "icons": [
            {
              "src": "./src/assets/images/icon.png",
              "sizes": "192x192",
              "type": "image/png"
            }
          ]
        }
      }
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "splash": {
      "image": "./src/assets/images/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    }
  }
}